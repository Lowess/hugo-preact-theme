{
  "name": "exampleSite",
  "version": "1.0.0",
  "description": "Hugo Preact - Example Site",
  "repository": "Lowess/hugo-preact-theme",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src",
    "dev": "run-p dev:**",
    "dev:watch": "onchange '../assets/js/*' -- sed -i '' -e '1s/.*/<!-- autoreload -->/' ../layouts/shortcodes/preact.html",
    "dev:hugo": "hugo serve -d public -vw --themesDir ../..",
    "start": "run-p start:**",
    "start:hugo": "hugo serve -d public -vw",
    "preview": "run-p preview:**",
    "preview:hugo": "npm run start:hugo -- -D -F",
    "prebuild": "rm -rf public",
    "build": "npm run build:hugo",
    "build:preview": "npm run build:hugo:preview",
    "build:hugo": "hugo -d public -v -b ${BASE_URL:-/}",
    "build:hugo:preview": "npm run build:hugo -- -D -F",
    "test": "jest"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-object-rest-spread": "^7.17.3",
    "@babel/plugin-syntax-object-rest-spread": "^7.8.3",
    "@babel/plugin-transform-react-jsx": "^7.17.3",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@testing-library/preact": "^2.0.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "babel-loader": "^8.2.3",
    "babel-plugin-module-resolver": "^4.1.0",
    "ejs": "^3.1.6",
    "hugo-bin-extended": "^0.93.3",
    "inquirer": "^8.2.1",
    "jest": "^27.5.1",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "path": "^0.12.7",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.0.0",
    "animate.css": "^4.1.1",
    "bootstrap": "^5.1.3",
    "bootstrap-icons": "^1.8.1",
    "preact": "^10.6.6",
    "preact-habitat": "^3.3.0",
    "preact-render-to-string": "^5.1.20",
    "react": "npm:@preact/compat@^17.0.3",
    "react-dom": "npm:@preact/compat@^17.0.3",
    "react-ssr-prepass": "npm:preact-ssr-prepass@^1.2.0"
  },
  "resolutions": {
    "natives": "1.1.6"
  }
}
